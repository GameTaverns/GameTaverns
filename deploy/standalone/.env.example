# GameTaverns - Environment Configuration
# Copy to .env and fill in your values

# ===========================================
# DATABASE (MariaDB)
# ===========================================
# Connection string for core database
DATABASE_URL=mysql://gametaverns_app:YOUR_PASSWORD@localhost:3306/gametaverns_core

# Individual connection settings (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=3306
DB_USER=gametaverns_app
DB_PASSWORD=YOUR_PASSWORD
DB_NAME=gametaverns_core

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars

# Token expiry
JWT_EXPIRES_IN=7d

# ===========================================
# SERVER
# ===========================================
PORT=3001
NODE_ENV=production

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://gametaverns.com,https://*.gametaverns.com

# ===========================================
# CLOUDFLARE
# ===========================================
# Turnstile secret key for bot protection
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# ===========================================
# EMAIL (HestiaCP Mail Server)
# ===========================================
SMTP_HOST=mail.gametaverns.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@gametaverns.com
SMTP_PASS=your-smtp-password
SMTP_FROM=GameTaverns <noreply@gametaverns.com>

# ===========================================
# SECURITY
# ===========================================
# Encryption key for PII (generate with: openssl rand -hex 32)
PII_ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# SITE SETTINGS
# ===========================================
SITE_NAME=GameTaverns
SITE_DESCRIPTION=Create and share your board game collection
SITE_URL=https://gametaverns.com

# Timezone
TIMEZONE=America/New_York

# ===========================================
# FEATURES
# ===========================================
FEATURE_PLAY_LOGS=true
FEATURE_WISHLIST=true
FEATURE_FOR_SALE=true
FEATURE_MESSAGING=true
FEATURE_RATINGS=true

# ===========================================
# TENANT CONFIGURATION
# ===========================================
# Reserved slugs (in addition to defaults)
RESERVED_SLUGS=

# Platform admin emails (comma-separated)
PLATFORM_ADMINS=admin@gametaverns.com

# ===========================================
# AI (Optional - Bring Your Own Key)
# ===========================================
# PERPLEXITY_API_KEY=pplx-...
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_AI_API_KEY=AIza...

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# BoardGameGeek API (no key required)
BGG_API_URL=https://boardgamegeek.com/xmlapi2
