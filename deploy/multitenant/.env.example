# Example .env file for GameTaverns Multi-Tenant Deployment
# Copy this to .env and fill in your values

# ===================
# Required Settings
# ===================

# Your domain (without https://)
DOMAIN=gametaverns.com

# Site display name
SITE_NAME=GameTaverns

# Full site URL (with https://)
SITE_URL=https://gametaverns.com

# CORS origins (comma-separated, supports wildcards)
CORS_ORIGINS=https://gametaverns.com,https://*.gametaverns.com

# Database password (generate a strong random password)
POSTGRES_PASSWORD=CHANGE_ME_TO_RANDOM_STRING

# JWT secret (generate a strong random string, min 32 chars)
JWT_SECRET=CHANGE_ME_TO_RANDOM_STRING_AT_LEAST_32_CHARS

# ===================
# Email (SMTP) - REQUIRED for email verification
# ===================

# SMTP server host (e.g., smtp.resend.com, smtp.sendgrid.net)
SMTP_HOST=smtp.resend.com

# SMTP port (usually 587 for TLS or 465 for SSL)
SMTP_PORT=587

# SMTP username (often your email or API key name)
SMTP_USER=resend

# SMTP password or API key
SMTP_PASS=re_your_api_key_here

# From address (must match verified domain)
SMTP_FROM=noreply@gametaverns.com

# Use secure connection (true for port 465, false for 587 with STARTTLS)
SMTP_SECURE=false

# ===================
# Security
# ===================

# PII encryption key (generate a strong random string)
PII_ENCRYPTION_KEY=CHANGE_ME_TO_RANDOM_STRING

# Cloudflare Turnstile secret key (optional, for bot protection)
TURNSTILE_SECRET_KEY=

# ===================
# Platform Admin
# ===================

# Comma-separated list of admin email addresses
PLATFORM_ADMINS=admin@example.com

# ===================
# Discord Integration (Optional)
# ===================

# Discord bot token (from Developer Portal)
DISCORD_BOT_TOKEN=

# Discord OAuth client ID
DISCORD_CLIENT_ID=

# Discord OAuth client secret
DISCORD_CLIENT_SECRET=

# ===================
# AI Features (Optional - BYOK)
# ===================

# AI provider: openai or gemini
AI_PROVIDER=

# AI API key
AI_API_KEY=

# ===================
# Advanced Settings
# ===================

# JWT token expiration
JWT_EXPIRES_IN=7d

# PostgreSQL port (change if 5432 is in use)
POSTGRES_PORT=5432

# App port (internal, nginx proxies to this)
APP_PORT=80

# Reserved slugs (comma-separated, in addition to defaults)
RESERVED_SLUGS=

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================
# SSL (Cloudflare)
# ===================

# Your email for SSL certificate notifications
ADMIN_EMAIL=admin@example.com

# Cloudflare API token (with DNS edit permissions)
CLOUDFLARE_API_TOKEN=
