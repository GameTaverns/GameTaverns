############################################################
# GameTaverns Self-Hosted Configuration
############################################################

# ===========================================
# REQUIRED: Domain & URLs
# ===========================================
SITE_URL=https://gametaverns.com
API_EXTERNAL_URL=https://api.gametaverns.com
MAIL_DOMAIN=gametaverns.com

# ===========================================
# REQUIRED: Security Keys (auto-generated by install.sh)
# ===========================================
POSTGRES_PASSWORD=
JWT_SECRET=
ANON_KEY=
SERVICE_ROLE_KEY=
SECRET_KEY_BASE=
PII_ENCRYPTION_KEY=

# ===========================================
# Site Branding
# ===========================================
SITE_NAME=GameTaverns
SITE_DESCRIPTION=Browse and discover our collection of board games

# ===========================================
# Port Configuration
# ===========================================
APP_PORT=3000
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443
STUDIO_PORT=3001
POSTGRES_PORT=5432
ROUNDCUBE_PORT=9001

# ===========================================
# Auth Configuration
# ===========================================
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
JWT_EXPIRY=3600
ADDITIONAL_REDIRECT_URLS=

# ===========================================
# SMTP Configuration
# ===========================================
# Leave empty to use built-in mail container
SMTP_HOST=mail
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@gametaverns.com
SMTP_SENDER_NAME=GameTaverns
SMTP_FROM=noreply@gametaverns.com

# ===========================================
# External API Keys (Optional)
# ===========================================
# AI enrichment
PERPLEXITY_API_KEY=
OPENAI_API_KEY=
FIRECRAWL_API_KEY=

# Discord integration
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Bot protection
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# ===========================================
# Timezone
# ===========================================
TIMEZONE=America/New_York
